<!DOCTYPE html>
<html>
<head>
  <title>StyleByEla</title>
  <link href="https://fonts.googleapis.com/css?family=Raleway|Signika+Negative" rel="stylesheet">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <header>
    <div class='navbar navbar-default navbar-static-top'>
      <div class='container'>
        <div class='navbar-header'>
          <button type='button' class='navbar-toggle' data-toggle='collapse' data-target='.navbar-collapse' aria-expanded='false'>
            <span class='sr-only'>Toggle navigation</span>
            <span class='icon-bars'></span>
            <span class='icon-bars'></span>
            <span class='icon-bars'></span>
          </button>
        </div>
        <div class='navbar-left collapse navbar-collapse'>
          <ul class='nav navbar-nav'>
            <li><%= link_to "Home", root_path, class: "nav" %></li>
            <li><%= link_to "Posts", posts_path, class: "nav" %></li>
            <li><a href='#' class='nav'>Contacts</a></li>
          </ul>
        </div>
        <div class='navbar-right collapse navbar-collapse'>
          <ul class='nav navbar-nav'>
            <% if user_signed_in? %>
              <li><%= link_to "New Post", new_post_path, class: "nav" %></li>
              <li><%= link_to "Accounts", edit_user_registration_path, class: "nav" %></li>
              <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "nav" %></li>
            <% else %>
              <li><%= link_to "Sign In", new_user_session_path %></li>
              <li><%= link_to "Sign Up", new_user_registration_path %></li>
            <% end %>
          </ul>
          </div>
        </div>
      </div>
    </div>
  </header>



  <% if current_page?(root_path) %>

  <!-- logo -->
  <section id='logo'>
    <div class='container'>
      <div class='row'>
        <div class='col-md-12'>
          <%= image_tag('sugar-blog-logo.png', :alt => 'style by ela', :class => 'img-responsive center-block') %>
        </div>
      </div>
    </div>
  </section>
  <!-- logo  end-->

  <div class='container'>
    <div class='row'>
      <div class='col-md-12 col-sm-12 text-center'>
        <% flash.each do |name, msg|  %>
          <%= content_tag(:div,msg, class: "alert alert-info") %>
        <% end %>
      </div>
    </div>
  </div>

  <!-slider-->

          <section id="slider">
              <div id="myCarousel" class="carousel slide" data-interval='4000' data-ride='carousel'>
                  <ol class="carousel-indicators">
                      <li data-target='#myCarousel' data-slide-to='0' class='active'></li>
                      <li data-target='#myCarousel' data-slide-to='1'></li>
                      <li data-target='#myCarousel' data-slide-to='2'></li>
                  </ol>

                  <div class="carousel-inner">
                      <div class="item active">
                          <%= image_tag('koi3.jpg', :alt => "fashiongirl", width: '890', height: '593', :class => 'img-responsive center-block') %>
                          <div class="carousel-caption">
                              <h3 class='date'><small>23 Sept 2016</small></h3>
                              <h1><%=  %></h1>
                          </div>
                      </div>
                      <div class="item">
                          <%= image_tag('koi3.jpg', :alt => "fashiongirl", width: '890', height: '593', :class => 'img-responsive center-block') %>
                          <div class="carousel-caption">
                              <h3 class='date'><small>23 Sept 2016</small></h3>
                              <h1><%= %></h1>
                          </div>
                      </div>
                      <div class="item">
                          <%= image_tag('koi3.jpg', :alt => "fashiongirl", width: '890', height: '593', :class => 'img-responsive center-block') %>
                          <div class="carousel-caption">
                              <h3 class='date'><small>23 Sept 2016</small></h3>
                              <h1><%=  %></h1>
                          </div>
                      </div>
                  </div>

              </div>
          </section>
          <!-slider end-->
  <% end %>


      <%= yield %>



  <!--Footer-->
          <section id="footer">
              <div class="container text-center">
                  <div class="row">
                      <div class="col-md-12">
                          <h3 class='footer_title'>Style Guru</h3>
                          <hr>
                          <div class="footer_content">
                              <p>Copyright &copy; 2016 All rights reserved</p>
                              <p><i class='fa fa-chevron-circle-up fa-2x'></i></p>
                          </div>
                      </div>
                  </div>
              </div>
          </section>
          <!--Footer end-->

</body>
</html>
